extends /layouts/application.pug

block content
  .col-sm-6.col-md-8
    h4
      p= user.fullName
    p
      i.glyphicon.glyphicon-envelope
      p= user.email
    if user.id === currentUserId
      a.btn.btn-primary(href=urlFor('editUser', { id: user.id })) Edit
      a.btn.btn-primary.btn-danger(href=urlFor('deleteUser', { id: user.id }) data-method='delete' rel='nofollow') Delete account
