extends /layouts/application.pug

block content
  .row.justify-content-center
    .card
      .card-body
        h4= user.fullName
        p
          i.glyphicon.glyphicon-envelope
          p= user.email
        if user.id === currentUserId
          a.btn.btn-primary(href=urlFor('editUser', { id: user.id })) Edit
          a.btn.btn-primary.btn-danger(href=urlFor('deleteUser', { id: user.id }) data-method='delete' rel='nofollow' data-confirm="Are you sure?") Delete account
