extends /layouts/application.pug

block content
  .row.justify-content-center
    .card
      .card-body
        h1.h3.mb-3.font-weight-normal Create Account
        +formFor(f, { url: urlFor('createUsers'), method: 'post' })
          +input(f, 'firstName', 'inputFirstName', { as: 'text' })
          +input(f, 'lastName', 'inputLastName', { as: 'text' })
          +input(f, 'email', 'inputEmail', { as: 'email' })
          +input(f, 'password', 'inputPassword', { as: 'password' })
          br
          +button(f, 'submit', 'Create New Account')
