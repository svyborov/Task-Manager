extends /layouts/application.pug

block content
  .row.justify-content-center.pb-5.mt-5.text-center
    .col-12.col-sm-8.col-md-7.col-lg-4
      .card.shadow.border-top.border-primary
        .card-body
          h1.h3.mb-3.font-weight-normal Create status
          +formFor(f, { url: urlFor('createStatus'), method: 'post' })
            +input(f, 'name', 'inputname', { as: 'text' })
            br
            +button(f, 'submit', 'Create new status')
