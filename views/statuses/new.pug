extends /layouts/application.pug

block content
  .row.justify-content-center
    .card
      .card-body
        h1.h3.mb-3.font-weight-normal Create status
        +formFor(f, { url: urlFor('createStatus'), method: 'post' })
          +input(f, 'name', 'inputname', { as: 'text' })
          br
          +button(f, 'submit', 'Create new status')
