extends /layouts/application.pug

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.h3.mb-3.font-weight-normal Log in
          +formFor(f, { url: urlFor('session'), method: 'post' })
            +input(f, 'email', 'inputEmail', { as: 'email' })
            +input(f, 'password', 'inputPassword', { as: 'password' })
            +button(f, 'submit', 'Log in')
