extends /layouts/application.pug

block content
  .row.justify-content-center.pb-5.mt-5.text-center
    .col-12.col-sm-8.col-md-7.col-lg-4
      .card.shadow.border-top.border-primary
        .card-body
          h1.h3.mb-4.mt-3 Log in
            +formFor(f, { url: urlFor('createSession'), method: 'post' })
              +input(f, 'email', 'inputEmail', { as: 'email' })
              +input(f, 'password', 'inputPassword', { as: 'password' })
              +button(f, 'submit', 'Log in')
          card-footer.py-4.border-top-0
            a.x-link-only-hover(href=urlFor('newUser')) create an account
